<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:aapt="http://schemas.android.com/aapt"
	android:background="#F9FFFFFF"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="top|center">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:foreground="?android:selectableItemBackground"
					android:gravity="top|center">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="215dp"
						android:layout_height="wrap_content"
						android:gravity="left|center">

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="150dp"
							android:layout_height="55dp"
							android:gravity="left|center">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/bytes_in"
								android:textSize="15sp"
								android:layout_marginLeft="10dp"
								android:textStyle="bold"
								android:textColor="#FF000000"/>

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:gravity="right|center"
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">

						<LinearLayout
							android:gravity="right|center"
							android:orientation="horizontal"
							android:layout_width="150dp"
							android:layout_height="55dp">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:visibility="gone"/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/bytes_out"
								android:textSize="15sp"
								android:layout_marginRight="10dp"
								android:textStyle="bold"
								android:textColor="#FF000000"/>

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<ImageView
					android:layout_width="185dp"
					android:layout_height="180dp"
					android:background="@drawable/icons"
					android:layout_marginBottom="-5dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFDB7093"
					android:textStyle="bold"
					android:shadowColor="#FF000000"
					android:shadowDy="2.0"
					android:shadowRadius="1.5"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:id="@+id/titleteks"
					android:typeface="serif"
					android:gravity="center"
					android:textSize="30sp"
					android:text="@string/app_name"
					android:fontFamily="@font/skarti4"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Application Version :"
						android:textColor="#FF000000"
						android:textStyle="bold"
						android:textSize="13sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:textColor="#FF000000"
						android:textStyle="bold"
						android:textSize="13sp"
						android:id="@+id/app_info"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:gravity="center"
					android:background="@drawable/background_rounded"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:padding="5dp">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="4dp">

						<Spinner
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/serverSpinner"
							android:background="@null"/>

					</LinearLayout>

					<RelativeLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="4dp"
						android:orientation="horizontal"
						android:background="@drawable/background_cyan"
						android:layout_marginLeft="3dp"
						android:layout_marginRight="3dp">

						<RelativeLayout
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							android:orientation="horizontal"
							android:layout_marginLeft="46dp">

							<android.support.design.widget.TextInputLayout
								android:layout_width="match_parent"
								android:layout_height="45dp"
								android:textColor="#ffffff"
								android:textColorHint="#ff000000"
								android:layout_margin="5dp">

								<android.support.design.widget.TextInputEditText
									android:id="@+id/activity_mainInputPasswordServerEdit"
									android:layout_height="40dp"
									android:layout_width="match_parent"
									android:hint="@string/auth_server"
									android:ems="15"
									android:textColorHint="#ffffff"
									android:singleLine="true"/>

							</android.support.design.widget.TextInputLayout>

						</RelativeLayout>

						<ImageView
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_centerVertical="true"
							android:layout_marginLeft="10dp"
							android:background="@drawable/ic_dev"/>

					</RelativeLayout>					
					
					<RelativeLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="4dp"
						android:orientation="horizontal"
						android:background="@drawable/background_cyan"
						android:layout_marginLeft="3dp"
						android:layout_marginRight="3dp">

						<RelativeLayout
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							android:orientation="horizontal"
							android:layout_marginLeft="46dp">

							<android.support.design.widget.TextInputLayout
								android:layout_width="match_parent"
								android:layout_height="45dp"
								android:textColor="#ffffff"
								android:textColorHint="#ff000000"
								android:layout_margin="5dp">

								<android.support.design.widget.TextInputEditText
									android:id="@+id/activity_mainInputPasswordUserEdit"
									android:layout_height="40dp"
									android:layout_width="match_parent"
									android:hint="@string/auth_username"
									android:ems="15"
									android:textColorHint="#ffffff"
									android:singleLine="true"/>

							</android.support.design.widget.TextInputLayout>

						</RelativeLayout>

						<ImageView
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_centerVertical="true"
							android:layout_marginLeft="10dp"
							android:background="@drawable/user"/>

					</RelativeLayout>

					<RelativeLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="4dp"
						android:orientation="horizontal"
						android:background="@drawable/background_cyan"
						android:gravity="center"
						android:layout_marginLeft="3dp"
						android:layout_marginRight="3dp">

						<RelativeLayout
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							android:orientation="horizontal"
							android:layout_marginRight="45dp"
							android:layout_marginLeft="46dp">

							<android.support.design.widget.TextInputLayout
								android:layout_width="match_parent"
								android:layout_height="45dp"
								android:textColor="#ffffff"
								android:textColorHint="#ff000000"
								android:layout_margin="5dp">

								<android.support.design.widget.TextInputEditText
									android:id="@+id/activity_mainInputPasswordPassEdit"
									android:layout_height="40dp"
									android:layout_width="match_parent"
									android:hint="@string/password"
									android:ems="15"
									android:singleLine="true"
									android:textColorHint="#ffffff"
									android:textColor="#ffffff"/>

							</android.support.design.widget.TextInputLayout>

						</RelativeLayout>

						<ImageView
							android:layout_width="35dp"
							android:layout_height="40dp"
							android:background="#00FFFFFF"
							android:layout_alignParentRight="true"
							android:id="@+id/activity_mainInputShowPassImageButton"
							android:src="@drawable/show1"
							android:layout_marginTop="7dp"
							android:layout_marginRight="5dp"/>

						<ImageView
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_centerVertical="true"
							android:layout_marginLeft="10dp"
							android:background="@drawable/pass"/>

					</RelativeLayout>

				</LinearLayout>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:layout_marginBottom="-31dp"
					android:background="@drawable/background_rounded"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp">

					<Button
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/activity_starterButtonMain"
						android:textColor="#00000000"
						android:background="@drawable/background_rounded"/>

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:id="@+id/connection_status"
					android:textColor="#FFFFFFFF"
					android:text="START"
					android:typeface="serif"
					android:textSize="18sp"
					android:textStyle="bold"
					android:shadowRadius="2.0"
					android:shadowDy="1.0"
					android:shadowColor="#FF000000"
					android:shadowDx="1.0"
					android:layout_marginTop="-3dp"/>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:gravity="center"
					android:layout_marginTop="18dp">

					<Button
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="41dp"
						android:gravity="center"
						android:text="TOOLS"
						android:id="@+id/tools"
						android:background="@drawable/saputratech1"
						android:textColor="#FFFFFFFF"
						android:textSize="13sp"
						android:textStyle="bold">

					</Button>

					<Button
						android:orientation="vertical"
						android:layout_width="90dp"
						android:layout_height="41dp"
						android:gravity="center"
						android:text="SETTINGS"
						android:id="@+id/settings"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:background="@drawable/saputratech1"
						android:textColor="#FFFFFFFF"
						android:textSize="13sp"
						android:textStyle="bold">

					</Button>

					<Button
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="41dp"
						android:gravity="center"
						android:text="RESTORE"
						android:background="@drawable/saputratech1"
						android:textColor="#FFFFFCFC"
						android:textSize="13sp"
						android:textStyle="bold"
						android:id="@+id/sk_restore">

					</Button>

					<Button
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="41dp"
						android:gravity="center"
						android:text="EXIT"
						android:background="@drawable/saputratech1"
						android:id="@+id/sk_exit"
						android:textColor="#FFFFFCFC"
						android:textSize="13sp"
						android:textStyle="bold"
						android:layout_marginLeft="10dp">

					</Button>

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFDB7093"
					android:textStyle="bold"
					android:shadowColor="#FF000000"
					android:shadowDy="2.0"
					android:shadowRadius="1.5"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:id="@+id/SaputraTechOperator"
					android:typeface="serif"
					android:gravity="center"
					android:textSize="25sp"
					android:text="SIM CARD"
					android:fontFamily="@font/skarti4"/>

				<TextView
					android:fontFamily="@font/skarti4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#FFDB7093"
					android:textStyle="bold"
					android:shadowColor="#FF000000"
					android:shadowDy="5"
					android:shadowRadius="1"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:typeface="serif"
					android:gravity="center"
					android:textSize="25sp"
					android:id="@+id/skarti_config"
					android:text="0"
					android:layout_marginTop="6dp"/>

				
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:foreground="?android:selectableItemBackground"
					android:gravity="center"
					android:layout_marginTop="125dp">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="210dp"
						android:layout_height="wrap_content"
						android:gravity="left|center"
						android:visibility="gone">

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="150dp"
							android:layout_height="55dp"
							android:gravity="left|center"
							android:background="@drawable/background_rounded"
							android:visibility="gone">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="IMPORT OFFLINE"
								android:layout_marginLeft="3dp"
								android:id="@+id/monsour_stats"
								android:visibility="gone"/>

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:foreground="?android:selectableItemBackground"
					android:gravity="center">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="210dp"
						android:layout_height="wrap_content"
						android:gravity="left|center"
						android:visibility="gone">

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="150dp"
							android:layout_height="55dp"
							android:gravity="left|center"
							android:background="@drawable/background_rounded"
							android:visibility="gone">

							<Chronometer
								android:visibility="gone"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="IMPORT OFFLINE"
								android:layout_marginLeft="3dp"
								android:id="@+id/cmTimer"/>

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>
